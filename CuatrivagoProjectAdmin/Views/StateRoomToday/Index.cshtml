@model IEnumerable<CuatrivagoProjectAdmin.Models.StateRoom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section moduleTitle{
}


@section content{
    <div id="info">
        <h1 id="glyphicons" class="page-header">Estado habitaciones al día de hoy</h1>
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Estado
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nameRoom)
                    </td>
                    @if (item.state.Equals("0"))
                    {
                        <td style="background-color: #ff0000; color: #000000;">Ocupada</td>
                    }
                    else
                    {
                        <td style="background-color: #00ff90; color: #000000;">Disponible</td>
                    }
                </tr>
            }

        </table>
    </div>

    <div class="form-group" style="text-align: center">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button id="imp" class="btn btn-success" type="button">Generar informe</button>
        </div>
    </div>
    <script>
        $('#imp').click(function () {
            $('#info').printThis();
        });
    </script>
}