@model IEnumerable<CuatrivagoProjectAdmin.Models.RangeDateRoom>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section moduleTitle{
}

@section content{
    <div id="info">
        <h1 id="glyphicons" class="page-header">Lista de habitaciones por rango</h1>
        <table class="table">
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Capacidad
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Precio
                </th>
            </tr>

            @foreach (var item in Model)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.capacity)
                    </td>

                    @if (item.available.Equals("0"))
                    {
                        <td style="background-color: #ff0000; color: #000000;">Ocupada</td>
                    }
                    else
                    {
                        <td style="background-color: #00ff90; color: #000000;">Disponible</td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.price)
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="form-group" style="text-align: center">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button id="imp"  class="btn btn-success" type="button" >Generar informe</button>
        </div>
    </div>
    <script>
        $('#imp').click(function () {
            $('#info').printThis();
        });
    </script>
}


