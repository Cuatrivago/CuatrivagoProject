@model IEnumerable<CuatrivagoProjectAdmin.Models.StatusHotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section moduleTitle{
}


@section content{
    <div id="info">
        <h1 id="glyphicons" class="page-header">Estado del hotel</h1>
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Reservado
                </th>
                <th>
                    Bloqueado
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reserve)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.blocked)
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="form-group" style="text-align: center">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button id="imp" class="btn btn-success" type="button">Generar informe</button>
        </div>
    </div>
    <script>
        $('#imp').click(function () {
            $('#info').printThis();
        });
    </script>
}
