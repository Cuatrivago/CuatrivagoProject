@model CuatrivagoProjectAdmin.Models.OffertList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section moduleTitle{
}

@section content{
    <div id="info">
        <h1 id="glyphicons" class="page-header">Oferta realizada correctamente</h1>
        <table class="table">
            <tr>
                <th>
                    Fecha de inicio
                </th>
                <th>
                    Fecha de caducidad
                </th>
                <th>
                    Descuento
                </th>
                <th>
                    Tipo de habitación
                </th>
                <th>
                    Activa
                </th>
                <th>
                    Eliminar oferta
                </th>
            </tr>

            @foreach (var item in Model.offers)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateOut)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.discount) %
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.roomType)
                    </td>
                    @if (item.active == 1)
                    {
                        <td>Activa</td>
                    }
                    else
                    {
                        <td>No activa</td>
                    }
                    <td>
                        <a href="@Url.Action("deleteOffer", "Offer", new {id = item.id })">Eliminar</a>
                    </td>

                </tr>
            }

        </table>
    </div>

    <div class="form-group" style="text-align: center">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button id="imp" class="btn btn-success" type="button">Generar informe</button>
        </div>
    </div>

    <script>
        $('#imp').click(function () {
            $('#info').printThis();
        });
    </script>
}